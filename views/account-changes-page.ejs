<%- include('header'); -%>


    <%- include('nav'); -%>


    
        <div class="mx-auto px-4 py-4 container-fluid">
            <h3 id="account-change-form">Make changes to your Moreland Photography Studio account</h3>
            <p>This page allows you to make changes to your user details. For the purposes of demonstration, if the user changes any non-account-based details (such as their first or last name), they are redirected back to the user-details page to show the new details. If they change their email or password, a SQL update query is generated in the index.js script and the user is prompted to log in again using their new login details.</p>
            <div class="mx-2 px-2 mb-4 pb-4">
                    <div class="row mt-2">
                        <div class="col-md-6 col-sm-12">
                            <form action="/change-email" method="post" class="change-form">
                                <h2>Change Email Address</h2>
                                        <label for="new_email" class="my-1">New Email</label>
                                        <input type="email" name="new_email" id="new_email" class="form-control">
                                <div class="d-grid gap-2 d-md-block my-4 p-auto">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </form>
                            
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6 col-sm-12">
                            <form action="/change-password" method="post" class="change-form">
                                <h2>Change Password</h2>
                                <div class="row mt-2">
                                    <div class="col-md-6 col-sm-12">
                                        <label for="current_password" class="my-1">Current Password</label>
                                        <input type="password" name="current_password" id="current_password" class="form-control">
                                    </div>
                                    <div class="col-md-6 col-sm-12">
                                        <label for="new_password" class="my-1">New Password</label>
                                        <input type="password" name="new_password" id="new_password" class="form-control">
                                    </div>
                                </div>
                                <div class="d-grid gap-2 d-md-block my-4 p-auto">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <p class="text-danger">Please note, you will be required to re-log in if changing either your email address or password.</p>
    
                    <div class="row my-2">
                        <div class="col-md-6 col-sm-12">
                            <form action="/change-firstname" method="post" class="change-form">
                                <h2>Change First Name</h2>
                                <div class="row mt-2">
                                    <div class="col-md-6 col-sm-12">
                                        <label for="new_fname" class="my-1">New First Name</label>
                                        <input type="text" name="new_fname" id="new_fname" class="form-control">
                                    </div>
                                </div>
                                <div class="d-grid gap-2 d-md-block my-4 p-auto">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="row my-2">
                        <div class="col-md-6 col-sm-12">
                            <form action="/change-lastname" method="post" class="change-form">
                                <h2>Change Last Name</h2>
                                <div class="row mt-2">
                                    <div class="col-md-6 col-sm-12">
                                        <label for="new_lname" class="my-1">New Last Name</label>
                                        <input type="text" name="new_lname" id="new_lname" class="form-control">
                                    </div>
                                </div>
                                <div class="d-grid gap-2 d-md-block my-4 p-auto">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
         
            </div>

        </div>

            
        </div>
        
        
    
    <%- include('footer'); -%>

